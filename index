отправить.php
<?php
$ to = " stingmu@gmail.com " ;

$ домен = $ _СЕРВЕР [ " HTTP_ХОСТ " ];
$ from = " info@ " . $ _SERVER [ " HTTP_HOST " ];

$ name = htmlspecialchars ( $ _POST [ " name " ]);
$ phone = htmlspecialchars ( $ _POST [ " phone " ]);
$ mess = htmlspecialchars ( $ _POST [ " mess " ]);

если (! пусто ( $ имя )) {
  $ headers = " От: $ from \r\n" ;
  $ headers .= " Отправитель: $ to \r\n" ;
  $ headers .= " Тип содержимого: text/html; кодировка=utf-8 \r\n" ;
  $ subject = " Сообщение с сайта " . $ домен ;
  $ сообщение = " <html>
    <голова>
      <title>Сообщение с сайта { $ domain } </title>
    </head>
    <тело>
      <h3>Пришло сообщение с сайта { $ domain } </h3>
      <p>Имя: { $ name } </p>
      <p>Телефон/электронная почта: { $ phone } </p>
      <p> { $ беспорядок } </p>
    </тело>
  </html> " ;

  если ( почта ( $ to , $ subject , $ message , $ headers , " -f " . $ from )) {
    выход ( ' {"успех": "ok"} ' );
  } еще {
    exit ( ' {"error": "Произошла ошибка при отправке сообщения"} ' );
  }
} еще {
  exit ( ' {"error": "Введите текст в соответствующем поле."} ' );
}
